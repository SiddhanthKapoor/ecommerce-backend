{
  "info": {
    "name": "E-Commerce API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080"
    }
  ],
  "item": [
    {
      "name": "Products",
      "item": [
        {
          "name": "Create Product",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"name\": \"Laptop\", \"description\": \"Gaming Laptop\", \"price\": 50000.0, \"stock\": 10}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/products",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "products"
              ]
            }
          }
        },
        {
          "name": "Get All Products",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/products",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "products"
              ]
            }
          }
        },
        {
          "name": "Search Products",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/products/search?q=laptop",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "products",
                "search"
              ],
              "query": [
                {
                  "key": "q",
                  "value": "laptop"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Cart",
      "item": [
        {
          "name": "Add to Cart",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"userId\": \"user123\", \"productId\": \"PRODUCT_ID\", \"quantity\": 2}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/cart/add",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "cart",
                "add"
              ]
            }
          }
        },
        {
          "name": "Get Cart",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/cart/user123",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "cart",
                "user123"
              ]
            }
          }
        },
        {
          "name": "Clear Cart",
          "request": {
            "method": "DELETE",
            "url": {
              "raw": "{{baseUrl}}/api/cart/user123/clear",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "cart",
                "user123",
                "clear"
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Orders",
      "item": [
        {
          "name": "Create Order",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"userId\": \"user123\"}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/orders",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "orders"
              ]
            }
          }
        },
        {
          "name": "Get Order",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/orders/ORDER_ID",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "orders",
                "ORDER_ID"
              ]
            }
          }
        },
        {
          "name": "Order History",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/orders/user/user123",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "orders",
                "user",
                "user123"
              ]
            }
          }
        },
        {
          "name": "Cancel Order",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{baseUrl}}/api/orders/ORDER_ID/cancel",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "orders",
                "ORDER_ID",
                "cancel"
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Payments",
      "item": [
        {
          "name": "Create Payment",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"orderId\": \"ORDER_ID\", \"amount\": 100000.0}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/payments/create",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "payments",
                "create"
              ]
            }
          }
        },
        {
          "name": "Webhook",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"event\": \"payment.captured\", \"payload\": {\"payment\": {\"entity\": {\"id\": \"pay_123\", \"order_id\": \"RAZORPAY_ORDER_ID\", \"status\": \"captured\"}}}}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/webhooks/payment",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "webhooks",
                "payment"
              ]
            }
          }
        }
      ]
    }
  ]
}